#!/usr/bin/env python
# -*- coding: utf-8 -*-
# Author: Christian Brodbeck <christianbrodbeck@nyu.edu>
import argparse
from zoterocleanup import merge_authors, check_for_missing_dois

# create the top-level parser
parser = argparse.ArgumentParser()
# parser.add_argument('--foo', action='store_true', help='foo help')
subparsers = parser.add_subparsers(help='sub-command help')

# author-names
subparser = subparsers.add_parser('authors', help='Clean up author names')
# subparser.add_argument('bar', type=int, help='bar help')
subparser.set_defaults(func=merge_authors)

# journal abbreviations
# subparser = subparsers.add_parser('abbr')
# subparser.add_argument('command', help=" | journal-abbr")

# DOIs
subparser = subparsers.add_parser('doi', help='Check for missing DOIs')
subparser.set_defaults(func=check_for_missing_dois)

args = parser.parse_args()
args.func()
